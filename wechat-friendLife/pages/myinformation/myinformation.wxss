/* pages/myinformation/myinformation.wxss */
.myinformation{
  width: 100%;
  height: 300rpx;
  background-color: cornsilk;
  display: flex;
}

.myName{
  margin-left: 10rpx;
  margin-top: 90rpx;
  font-size: 40rpx;
  font-weight: 600;
}

.like{
  margin-left: -130rpx;
  margin-top: 160rpx;
  width: 80rpx;
  height: 80rpx;
}
.QRcode{
  margin-left: 230rpx;
  margin-top: 100rpx;
  width: 130rpx;
  height: 130rpx;
}
.myPicture {
  width: 185rpx;
  height: 185rpx;
  margin-top: 60rpx;
  margin-left: 40rpx;
  border-radius: 50%;
}
.table{
  border: 1px solid #00b26a;
  width: 100%;
}
.tr{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.th{
  font-weight: 900;
  background: #00b26a;
  font-size: 14px;
  color: aliceblue;
}
.th,.td{
  padding: 10px;
  width: 100%;
  text-align: center;
  border-right: 1rpx solid #B0C4DE;
  border-bottom: 1rpx solid #B0C4DE;
}

/* 按钮样式 */
button {
  margin-top: 10rpx;
  color: white;/*字体颜色*/
  background-color: #00b26a;/*背景颜色*/
}





